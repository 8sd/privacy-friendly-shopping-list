<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="@dimen/card_corner_radius">

    <ImageView
            android:id="@+id/reminder_bar"
            android:layout_width="@dimen/status_width"
            android:layout_height="match_parent"
            android:src="@drawable/button_normal"
            android:layout_alignParentLeft="true"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
                android:id="@+id/summary_layout"
                android:layout_width="wrap_content"
                android:layout_height="?attr/listPreferredItemHeight">
            <TextView
                    android:id="@+id/textview_list_name"
                    android:text="@string/ph_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/list_padding"
                    android:layout_marginLeft="@dimen/list_margin"
                    android:textSize="@dimen/text_medium"
                    style="@style/Base.TextAppearance.AppCompat.Body2"/>
            <TextView
                    android:id="@+id/textview_list_info"
                    android:text="@string/ph_list_info"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/list_padding"
                    android:layout_marginLeft="@dimen/list_margin"
                    android:layout_marginRight="@dimen/list_margin_big"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/middlegrey"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/textview_list_name"/>
            <ImageView
                    android:id="@+id/imageview_high_prio_icon"
                    android:tint="@color/yellow"
                    android:src="@drawable/ic_error_black_24dp"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/textview_list_name"/>
            <ImageButton
                    android:id="@+id/expand_button_list"
                    android:layout_width="50dp"
                    android:layout_height="?attr/listPreferredItemHeight"
                    android:tint="?attr/colorAccent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    android:background="?android:selectableItemBackground"
                    android:layout_toLeftOf="@+id/textview_prod_quantity"
                    android:src="@drawable/ic_keyboard_arrow_down_white_24dp"/>
            <TextView
                    android:id="@+id/textview_prod_quantity"
                    android:text="@string/ph_list_nr_items"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/list_padding"
                    android:layout_marginRight="@dimen/list_margin"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/middlegrey"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_alignParentTop="true"
                    android:layout_alignEnd="@+id/textview_list_info"/>
        </RelativeLayout>

        <TextView
                android:id="@+id/textview_list_details"
                android:text="@string/ph_lists_details"
                android:layout_width="match_parent"
                android:textStyle="italic"
                android:visibility="gone"
                android:layout_margin="@dimen/list_margin"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
