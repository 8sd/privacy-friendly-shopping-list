<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="@dimen/card_corner_radius">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/textview_product_name"
                android:text="@string/ph_product_name"
                android:layout_width="wrap_content"
                android:layout_height="?attr/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:padding="@dimen/list_padding"
                android:layout_marginLeft="@dimen/list_margin"
                android:textSize="@dimen/text_medium"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>
        <TextView
                android:id="@+id/textview_product_info"
                android:text="@string/ph_product_info"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/list_padding"
                android:layout_marginLeft="@dimen/list_margin"
                android:layout_marginRight="@dimen/list_margin_big"
                android:textSize="@dimen/text_small"
                android:textColor="@color/middlegrey"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textview_product_name"/>

        <CheckBox
                android:id="@+id/checkbox_is_selected"
                android:layout_width="wrap_content"
                android:padding="@dimen/list_padding"
                android:layout_height="?attr/listPreferredItemHeight"
                android:gravity="center_vertical"
                android:buttonTint="?attr/colorAccent"
                android:layout_alignParentRight="true"
        />

        <TextView
                android:id="@+id/textview_prod_quantity"
                android:text="@string/ph_list_nr_items"
                android:layout_width="wrap_content"
                android:layout_height="?attr/listPreferredItemHeight"
                android:layout_toLeftOf="@id/checkbox_is_selected"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/list_margin"
                android:textSize="@dimen/text_small"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
