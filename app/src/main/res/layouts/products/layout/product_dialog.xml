<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp">

        <EditText
                android:id="@+id/product_name"
                android:inputType="text"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:selectAllOnFocus="true"
                android:hint="@string/product_name">
        </EditText>

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_checkbox"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_normal"
                    android:textColor="@color/white"
                    android:text="-"
                    android:id="@+id/product_button_minus"/>
            <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/button_normal"
                    android:textColor="@color/white"
                    android:text="+"
                    android:id="@+id/product_button_plus"/>
            <EditText
                    android:id="@+id/quantity"
                    android:inputType="number"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:selectAllOnFocus="true"
                    android:maxLength="3"
                    android:padding="15dp"
                    android:layout_marginLeft="5dp"

                    android:fontFamily="sans-serif" android:layout_weight="0.26"
                    android:hint="@string/quantity">
            </EditText>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Price: "/>

            <EditText
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_price"
                    android:inputType="numberDecimal"
                    android:selectAllOnFocus="true"
                    android:padding="15dp"
                    android:hint="@string/price"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="10"

    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/middleblue"
                android:layout_weight="4"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
        />

        <ImageView
                android:id="@+id/expand_button"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/expander_ic_minimized"
                android:layout_gravity="center"
                android:layout_weight="2"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="4"
                android:background="@color/middleblue"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"

        />

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/expandable_product_view">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"/>

                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/category_input"
                            android:layout_gravity="left"

                            android:inputType="textAutoComplete"
                            android:maxLength="40"
                            android:hint="Enter Category:"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="3dp"
                        android:padding="5dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Store"/>

                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/store_input"
                            android:layout_gravity="left"
                            android:inputType="textAutoComplete"
                            android:maxLength="40"
                            android:hint="Enter Store:"/>
                </LinearLayout>

        </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <Button android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="camera"
                        android:id="@+id/camera_button"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_view"/>

            </LinearLayout>

    </LinearLayout>

    </LinearLayout>

    <EditText
            android:id="@+id/product_notes"
            android:inputType="textMultiLine"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:hint="@string/list_notes"/>


</LinearLayout>

